{
  "name": "ML/AI Training",
  "image": "ghcr.io/wutims/ml-training:latest",
  
  // Features
  "features": {
    // Docker-out-of-Docker
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "moby": false
    }
  },

  // Mounts
  "mounts": [
    // Docker socket for DooD
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    // Persist editor server extensions across rebuilds (supports VS Code, Cursor, etc.)
    "source=vscode-server-extensions,target=/home/ubuntu/.vscode-server/extensions,type=volume",
    "source=cursor-server-extensions,target=/home/ubuntu/.cursor-server/extensions,type=volume",
    // Workspace bind mount to host directory (survives container rebuilds)
    // Creates ~/devcontainers/ml-training on host if it doesn't exist
    "source=${localEnv:HOME}/devcontainers/ml-training,target=/home/ubuntu/workspace,type=bind,consistency=cached",
    // Persist ML data/models on host as well
    "source=${localEnv:HOME}/devcontainers/ml-training/data,target=/home/ubuntu/data,type=bind,consistency=cached",
    "source=${localEnv:HOME}/devcontainers/ml-training/models,target=/home/ubuntu/models,type=bind,consistency=cached"
  ],

  // Default workspace folder inside container
  "workspaceFolder": "/home/ubuntu/workspace",

  // Create host directories if they don't exist
  "initializeCommand": "mkdir -p \"${localEnv:HOME}/devcontainers/ml-training\" \"${localEnv:HOME}/devcontainers/ml-training/data\" \"${localEnv:HOME}/devcontainers/ml-training/models\"",

  // Run as developer user
  "remoteUser": "ubuntu",
  "containerUser": "ubuntu",

  // Environment
  "containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1",
    "PYTHONUNBUFFERED": "1",
    "MLFLOW_TRACKING_URI": "mlruns",
    // HuggingFace cache
    "HF_HOME": "/home/ubuntu/.cache/huggingface",
    "TRANSFORMERS_CACHE": "/home/ubuntu/.cache/huggingface/transformers"
  },

  // GPU support (if available)
  "hostRequirements": {
    "gpu": "optional"
  },
  "runArgs": [
    "--gpus=all"
  ],

  // VS Code customizations
  "customizations": {
    "vscode": {
      "settings": {
        // Python
        "python.defaultInterpreterPath": "/home/ubuntu/.ml-tools/bin/python",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true
        },
        // Jupyter
        "jupyter.askForKernelRestart": false,
        "notebook.cellToolbarLocation": {
          "default": "right"
        },
        // Testing
        "python.testing.pytestEnabled": true,
        // Editor
        "editor.rulers": [88, 120],
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        // Terminal
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        // Python
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        // Jupyter
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-slideshow",
        // Data
        "RandomFractalsInc.vscode-data-preview",
        "mechatroner.rainbow-csv",
        // Git
        "eamodio.gitlens",
        "mhutchie.git-graph",
        // Docker
        "ms-azuretools.vscode-docker",
        // General productivity
        "streetsidesoftware.code-spell-checker",
        "usernamehw.errorlens",
        "oderwat.indent-rainbow",
        "gruntfuggly.todo-tree",
        // File/format support
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        // AI
        "anthropic.claude-code"
      ]
    }
  },

  // Post-create: activate ML environment
  "postCreateCommand": "echo 'source /home/ubuntu/.ml-tools/bin/activate' >> ~/.zshrc && echo 'âœ… ML training container ready!'",
  
  // Forward ports
  "forwardPorts": [
    8888,  // Jupyter Lab
    6006,  // TensorBoard
    5000   // MLflow
  ],

  "portsAttributes": {
    "8888": { "label": "Jupyter Lab", "onAutoForward": "notify" },
    "6006": { "label": "TensorBoard", "onAutoForward": "notify" },
    "5000": { "label": "MLflow", "onAutoForward": "notify" }
  }
}
